
<!--data entered here are just to check the UI design, later data will be generated from an external source  -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.gayaninanayakkara.hikingpal.Adams_Peak"
    android:backgroundTint="@color/dim_foreground_material_dark">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Adam's Peak"
                android:id="@+id/tvNameAdamsPeak"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:background="@drawable/adamspeak"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Adam's Peak, also known as Sripada  is a 2,243 m (7,359 ft) tall conical mountain located in central Sri Lanka. Access to the mountain is possible by 6 trails: Ratnapura-Palabaddala, Hatton-Nallathanni, Kuruwita-Erathna, Murraywatte, Mookuwatte and Malimboda. The Nallathanni and Palabaddala routes are most favored by those undertaking the climb. "
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Latitude: "
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.810900"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Longitude: "
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80.499302"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="Elevation: "
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,243m"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather"
                    android:textSize="14dp"
                    android:id="@+id/button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/abc_search_url_text_normal"
                    android:layout_marginLeft="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:id="@+id/but"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:textSize="14dp"
                    android:backgroundTint="@color/abc_search_url_text_normal"
                    android:layout_marginLeft="8dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
